<prefabs>
</prefabs>

<level name="Hello Precariously Level 0">
	<space damping="0.99"/>
	<gravity type="radial" strength="2000" falloff_power="0.5" primary="true"/>
	<background>
		<fill spaceColor="50,60,70" atmosphereColor="200,255,255" steps="4" innerRadius="1000" outerRadius="1400"/>
		<!-- other stuff like clouds, stars, planets, etc -->
	</background>
	<planet origin="0,0" friction="1" density="1" partitionSize="250">
		<surface
			radius="1000"
			noiseOctaves="8"
			noiseFalloff="0.4"
			noiseOffset="500"
			noiseRoughness="0.03"
		/>
		<core
			radius="200"
			noiseOctaves="4"
			noiseFalloff="0.5"
			noiseOffset="20"
			noiseRoughness="0.1"
		/>
	</planet>
	<cloudLayer>
		<draw textureAtlas="precariously/textures/Circle.png" atlasType="None"/>
		<simulation origin="0,0" radius="1100" count="500" period="300">
			<generator octaves="8" falloff="0.5"/>
			<particle minRadius="0" maxRadius="100" minRadiusNoiseValue="0.5"/>
		</simulation>
	</cloudLayer>
</level>