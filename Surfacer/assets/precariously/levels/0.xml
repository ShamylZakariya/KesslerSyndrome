<?xml version="1.0" encoding="UTF-8"?>

<prefabs>
</prefabs>

<level name="Hello Precariously Level 0">
	<space damping="0.99"/>
	<gravity type="radial" strength="2000" falloff_power="0.5" primary="true"/>
	<background>
		<fill spaceColor="20,30,40" atmosphereColor="60,70,80" steps="4" innerRadius="1000" outerRadius="1400"/>
		<!-- other stuff like clouds, stars, planets, etc -->
	</background>
	<planet origin="0,0" friction="1" density="1" partitionSize="250">
		<surface
			radius="1000"
			noiseOctaves="8"
			noiseFalloff="0.4"
			noiseOffset="500"
			noiseRoughness="0.03"
		/>
		<core
			radius="200"
			noiseOctaves="4"
			noiseFalloff="0.5"
			noiseOffset="20"
			noiseRoughness="0.1"
		/>
	</planet>
	<cloudLayer id="background">
		<draw textureAtlas="precariously/textures/CloudTop.png" atlasType="None"/>
		<simulation origin="0,0" radius="1070" count="500" period="300" displacementForce="40" returnForce="3">
			<generator octaves="4" falloff="0.5" seed="1"/>
			<particle minRadius="10" maxRadius="200" minRadiusNoiseValue="0.4" color="180,185,190,255"/>
		</simulation>
	</cloudLayer>
	<cloudLayer id="foreground">
		<draw textureAtlas="precariously/textures/CloudTop.png" atlasType="None"/>
		<simulation origin="0,0" radius="1100" count="500" period="300" displacementForce="50" returnForce="2">
			<generator octaves="4" falloff="0.5" seed="567"/>
			<particle minRadius="10" maxRadius="100" minRadiusNoiseValue="0.5" color="255,255,255,255"/>
		</simulation>
	</cloudLayer>
</level>